# Theme Configuration
REACT_APP_DEFAULT_THEME=dark
REACT_APP_ENABLE_THEME_TOGGLE=true

# Hardware Configuration
REACT_APP_ROBOT_UPDATE_INTERVAL=100
REACT_APP_WEBSOCKET_RECONNECT_ATTEMPTS=5
REACT_APP_HARDWARE_TIMEOUT=5000